<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    android:backgroundTint="@color/white"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/_6sdp"
            android:layout_gravity="center"
            android:src="@drawable/icon_alat"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content">

            <!--Text view id Alat-->
            <TextView
                android:id="@+id/txt_id_alat"
                android:textColor="@color/black"
                android:text="12345"
                android:textSize="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

<!--            &lt;!&ndash;Text view id kolam&ndash;&gt;-->
<!--            <TextView-->
<!--                android:text="3"-->
<!--                android:id="@+id/txt_id_kolam"-->
<!--                android:textSize="@dimen/_20sdp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->

            <!--Text view nama Alat-->
            <TextView
                android:text="Kolam 4"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:id="@+id/txt_nama_alat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

<!--            &lt;!&ndash;Text view nama pemilik&ndash;&gt;-->
<!--            <TextView-->
<!--                android:textSize="@dimen/_20sdp"-->
<!--                android:id="@+id/txt_nama_pemilik"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content" />-->

        </LinearLayout>




        <ImageView
            android:id="@+id/ivEdit"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            card_view:tint="@color/black" />

        <ImageView
            android:id="@+id/ivHapus"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            card_view:tint="@color/black"/>





    </LinearLayout>

</androidx.cardview.widget.CardView>