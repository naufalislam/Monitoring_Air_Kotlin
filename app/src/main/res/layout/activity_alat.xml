<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.AlatActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/black"
            android:text="Alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    <LinearLayout
        android:background="@color/color1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="@dimen/_12sdp"
            android:src="@drawable/icon_alat"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvId"
                android:layout_marginBottom="@dimen/_12sdp"
                android:textSize="@dimen/_15sdp"
                android:text="ID"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNama"
                android:textSize="@dimen/_20sdp"
                android:text="Nama"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

<!--            <TextView-->
<!--                android:id="@+id/tvPemilik"-->
<!--                android:textSize="@dimen/_20sdp"-->
<!--                android:text="Pemilik"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="@color/white"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

        </LinearLayout>


    </LinearLayout>

        <androidx.cardview.widget.CardView
            android:backgroundTint="@color/abuabu"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_margin="@dimen/_12sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_50sdp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@drawable/phmeter"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>


            <TextView
                android:layout_margin="@dimen/_12sdp"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="Nilai pH"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPh"
                android:layout_margin="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/_150sdp">

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:backgroundTint="@color/abuabu"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_130sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/temperature"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:text="Suhu 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSuhu1"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:backgroundTint="@color/abuabu"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_130sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/temperature"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:text="Suhu 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSuhu2"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/_150sdp">

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:backgroundTint="@color/abuabu"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_130sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/temperature"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:text="Suhu 3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSuhu3"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:backgroundTint="@color/abuabu"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_130sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/temperature"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"/>

                    <TextView
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:text="Suhu 4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSuhu4"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_25sdp"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>