<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pale">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".notifikasi.BaseAplication"
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon2"
        android:supportsRtl="true"
        android:theme="@style/Theme.MonitoringKotlin"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.NotifikasiActivity"></activity>
        <activity android:name=".activity.TambahAlatScanActivity" />
        <activity android:name=".activity.VerifikasiPasswordActivity" />
        <activity android:name=".activity.LupaPasswordActivity" />
        <activity android:name=".activity.AlatActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>